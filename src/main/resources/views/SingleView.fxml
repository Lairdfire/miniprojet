<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eafc.peruwelz.miniprojet.ctrl.TpersonneControleur">
    <children>
        <Label text="MINI PROJET" textFill="#3b64ab">
            <font>
                <Font size="58.0" />
            </font>
        </Label>
      <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="colId" editable="false" minWidth="60.0" prefWidth="161.0" text="ID" />
          <TableColumn fx:id="colLastName" prefWidth="427.0" text="LASTNAME" />
            <TableColumn fx:id="colFirstName" prefWidth="481.0" text="FIRSTNAME" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <VBox.margin>
            <Insets left="100.0" right="100.0" />
         </VBox.margin>
      </TableView>
        <FlowPane fx:id="buttonsList" alignment="CENTER" hgap="30.0" prefHeight="64.0" prefWidth="1280.0" vgap="10.0">
            <children>
                <Button fx:id="bttAdd" mnemonicParsing="false" onAction="#addRequest" prefWidth="150.0" text="Add">
                    <font>
                        <Font size="22.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#delete" prefWidth="150.0" text="Delete">
                    <font>
                        <Font size="22.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#updateRequest" prefWidth="150.0" text="Update">
                    <font>
                        <Font size="22.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#exit" prefWidth="150.0" text="Exit">
                    <font>
                        <Font size="22.0" />
                    </font>
                </Button>
            </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
        </FlowPane>
      <Pane prefHeight="57.0" prefWidth="1280.0" />
        <GridPane fx:id="form" alignment="CENTER" prefHeight="140.0" prefWidth="1280.0">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="40.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="103.0" minHeight="10.0" prefHeight="68.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="93.0" minHeight="0.0" prefHeight="72.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <TextField fx:id="fieldLastName" cache="true" prefHeight="44.0" prefWidth="512.0" promptText="Your last name">
               <font>
                  <Font size="24.0" />
               </font>
            </TextField>
                <TextField fx:id="fieldFirstName" prefHeight="41.0" prefWidth="512.0" promptText="Your first name" GridPane.rowIndex="1">
               <font>
                  <Font size="24.0" />
               </font>
            </TextField>
            </children>
        </GridPane>
        <FlowPane fx:id="buttonsForm" alignment="CENTER" hgap="30.0" prefHeight="64.0" prefWidth="1280.0">
            <children>
                <Button mnemonicParsing="false" onAction="#switchForm" prefWidth="150.0" text="Cancel">
                    <font>
                        <Font size="22.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#save" prefWidth="150.0" text="OK">
                    <font>
                        <Font size="22.0" />
                    </font>
                </Button>
            </children>
        </FlowPane>
    </children>
</VBox>
